  <div id="player"></div>

  <div style="margin-top: 15px;">
    <button onclick="previous()">‚¨ÖÔ∏è</button>
    <button onclick="player.playVideo()">‚èØÔ∏è</button>
    <button onclick="player.pauseVideo()">‚è∏Ô∏è</button>
    <button onclick="next()">‚û°Ô∏è</button>
    <button onclick="shuffle()">üîÄ</button>
  </div>

  <script src="https://www.youtube.com/iframe_api"></script>
  <script>
    const playlist = [
      "0W0GwQfEu_s",   // Lofi
      "I1sIXtaLoT0",    // Fallen Down
      "v23GA_5xYNU"     // 7 weeks and 3 days
    ];

    let index = 0;
    let player;

    function onYouTubeIframeAPIReady() {
      player = new YT.Player("player", {
        width: "350",
        height: "250",
        videoId: playlist[index],
        events: {
          onEnded: next
        }
      });
    }

    function next() {
      index = (index + 1) % playlist.length;
      player.loadVideoById(playlist[index]);
    }

    function previous() {
      index = (index - 1 + playlist.length) % playlist.length;
      player.loadVideoById(playlist[index]);
    }

    function shuffle() {
      index = Math.floor(Math.random() * playlist.length);
      player.loadVideoById(playlist[index]);
    }
  </script>

