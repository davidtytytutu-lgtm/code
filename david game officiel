<script>
// Variables sauvegardÃ©es
let cryptoValue = parseFloat(localStorage.getItem('cryptoValue')) || 100;
let balance = parseFloat(localStorage.getItem('balance')) || 0;
let plusCount = parseInt(localStorage.getItem('plusCount')) || 0;
let minusCount = parseInt(localStorage.getItem('minusCount')) || 0;
let historyEntries = JSON.parse(localStorage.getItem('historyEntries')) || [];

const cryptoValueDisplay = document.getElementById('cryptoValue');
const balanceDisplay = document.getElementById('balance');
const plusCountDisplay = document.getElementById('plusCount');
const minusCountDisplay = document.getElementById('minusCount');
const historyDiv = document.getElementById('history');

function updateDisplay() {
  cryptoValueDisplay.textContent = cryptoValue.toFixed(2);
  balanceDisplay.textContent = balance.toFixed(2);
  plusCountDisplay.textContent = plusCount;
  minusCountDisplay.textContent = minusCount;
}

function addHistory(action, change) {
  const color = change >= 0 ? 'green' : 'red';
  const entryText = `${action}: <span style="color:${color}">${change.toFixed(2)}</span> â†’ Valeur: ${cryptoValue.toFixed(2)} ðŸª™`;
  historyEntries.unshift(entryText); // ajouter au dÃ©but
  if(historyEntries.length > 50) historyEntries.pop(); // garder max 50 entrÃ©es
  localStorage.setItem('historyEntries', JSON.stringify(historyEntries));
  renderHistory();
}

function renderHistory() {
  historyDiv.innerHTML = '<p>Historique :</p>' + historyEntries.join('<br>');
}

// Fonction de changement alÃ©atoire
function randomChange(base=5) {
  return (Math.random() * base).toFixed(2) * 1;
}

// Bouton +
document.getElementById('plus').addEventListener('click', () => {
  const change = randomChange();
  cryptoValue += change;
  plusCount++;
  localStorage.setItem('cryptoValue', cryptoValue);
  localStorage.setItem('plusCount', plusCount);
  addHistory('âž• AugmentÃ©', change);
  updateDisplay();
});

// Bouton -
document.getElementById('minus').addEventListener('click', () => {
  const change = randomChange();
  cryptoValue -= change;
  if(cryptoValue < 0) cryptoValue = 0;
  minusCount++;
  localStorage.setItem('cryptoValue', cryptoValue);
  localStorage.setItem('minusCount', minusCount);
  addHistory('âž– DiminuÃ©', -change);
  updateDisplay();
});

// Bouton retirer
document.getElementById('withdraw').addEventListener('click', () => {
  balance += cryptoValue;
  cryptoValue = 100; // reset valeur
  localStorage.setItem('balance', balance);
  localStorage.setItem('cryptoValue', cryptoValue);
  addHistory('ðŸ’° RetirÃ©', 0);
  updateDisplay();
});

// Initialisation
updateDisplay();
renderHistory();
</script>

