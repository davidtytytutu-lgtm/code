<h1>Mon Clicker Game</h1>
<div id="score">0</div>
<button id="clickBtn">Clique !</button>
<button id="upgradeBtn">Upgrade (+1 point/clic) - 10 points</button>

<script>
  // Récupérer le score sauvegardé
  let score = parseInt(localStorage.getItem('score')) || 0;
  let pointsPerClick = parseInt(localStorage.getItem('pointsPerClick')) || 1;

  const scoreDisplay = document.getElementById('score');
  const clickBtn = document.getElementById('clickBtn');
  const upgradeBtn = document.getElementById('upgradeBtn');

  function updateDisplay() {
    scoreDisplay.textContent = score;
  }

  clickBtn.addEventListener('click', () => {
    score += pointsPerClick;
    localStorage.setItem('score', score);
    updateDisplay();
  });

  upgradeBtn.addEventListen
